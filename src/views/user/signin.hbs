<section class="htc__contact__area ptb--10 bg__white">
    <div class="container">
        <div class="row col-md-3 col-md-offset-4">
            <div class="contact-form-wrap mt--60">
                <div class="col-xs-12">
                    <div class="contact-title">
                        <h2 class="title__line--6">Login</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-md-offset-4">
            <form action="/signin" method="POST">
                <div class="form-group has-feedback">                   
                    <i class="fa fa-user form-control-feedback"></i>
                    <input type="email" title="Ingrese su Correo" id="email" name="email" class="form-control" placeholder="Correo" required>
                </div>
                <div class="form-group has-feedback">
                    <i class="fa fa-unlock-alt form-control-feedback"></i>
                    <input type="password" title="Ingrese su Contraseña" id="pass" name="pass" class="form-control" placeholder="Contraseña" required>
                </div>   
                {{!-- <input type="hidden" name="_csrf" value="{{csrfToken}}"> --}}
                <button type="submit" class="btn btn-primary">Ingresar</button>
            </form>
            <p style="color: black;">Aun no te has registrado? <a href="/signup" style="color: blue;">Registrate</a></p>
        </div>
    </div>
</section>