<!-- Start Category Area -->
<section class="htc__category__area ptb--100">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section__title--2 text-center">
                    <h2 class="title__line">Productos Destacados</h2>
                </div>
            </div>
        </div>
        <div class="htc__product__container">
            <div class="row">
                <div class="product__list clearfix mt--30">
                    {{#each lista_productos_bicicletas.recordset}}
                        <div class="col-md-4 col-lg-3 col-sm-4 col-xs-12">
                            <div class="category">
                                <div class="ht__cat__thumb">
                                    <a href="/detalle_bicicletas/{{id}}">
                                        <img style="width: 385px; height: 290px;" src="/img/fotos_bici/{{id}}/portada.jpeg" alt="product img">
                                    </a>
                                </div>
                                <div class="fr__hover__info">
                                    <ul class="product__action">
                                        <li><a href="/add/{{id}}"><i class="icon-handbag icons"></i></a></li>
                                    </ul>
                                </div>
                                <div class="fr__product__inner">
                                    <h4><a href="product-details.html">{{nombre}}</a></h4>
                                    <ul class="fr__pro__prize">
                                        {{!-- <li class="old__prize">$30.3</li> --}}
                                        <li>{{precio}}</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    {{/each}}

                    {{#each lista_productos_rodados.recordset}}
                        <div class="col-md-4 col-lg-3 col-sm-4 col-xs-12">
                            <div class="category">
                                <div class="ht__cat__thumb">
                                    <a href="/rodados/detalle_rodado/{{id}}">
                                        <img style="width: 385px; height: 290px;" src="/img/product/1.jpg" alt="product img">
                                    </a>
                                </div>
                                <div class="fr__hover__info">
                                    <ul class="product__action">
                                        {{!-- <li><a href="wishlist.html"><i class="icon-heart icons"></i></a></li> --}}

                                        <li><a href="/add/{{id}}"><i class="icon-handbag icons"></i></a></li>

                                        {{!-- <li><a href="#"><i class="icon-shuffle icons"></i></a></li> --}}
                                    </ul>
                                </div>
                                <div class="fr__product__inner">
                                    <h4><a href="product-details.html">{{nombre}}</a></h4>
                                    <ul class="fr__pro__prize">
                                        {{!-- <li class="old__prize">$30.3</li> --}}
                                        <li>{{precio}}</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</section>