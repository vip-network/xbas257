
<div class="ht__bradcaump__area" style="background: rgba(0, 0, 0, 0) url(/img/bg/4.jpg) no-repeat scroll center center / cover ;">
    <div class="ht__bradcaump__wrap"></div>
</div>

<div class="container">
    <div class="row">
        <section class="htc__product__details bg__white ptb--100">
    <!-- Start Product Details Top -->
    <div class="htc__product__details__top">
        <div class="container">
            <div class="row">
                <form action="/bicicletas/detalle_bicicletas/{{idProducto.id}}" method="POST"> 
                    <div class="col-md-5 col-lg-5 col-sm-12 col-xs-12">
                        <div class="htc__product__details__tab__content">
                            <!-- imagenes grandes -->
                            <div class="product__big__images">
                                <div class="portfolio-full-image tab-content">
                                    <div role="tabpanel" class="tab-pane fade in active" id="img-tab-1">
                                        <img src="/img/product-2/big-img/1.jpg" alt="full-image">
                                    </div>
                                    <div role="tabpanel" class="tab-pane fade" id="img-tab-2">
                                        <img src="/img/product-2/big-img/2.jpg" alt="full-image">
                                    </div>
                                    <div role="tabpanel" class="tab-pane fade" id="img-tab-3">
                                        <img src="/img/product-2/big-img/3.jpg" alt="full-image">
                                    </div>
                                </div>
                            </div>
                            <!-- fin imagenes grandes -->
                            <!-- imagenes pequeñas -->
                            <ul class="product__small__images" role="tablist">
                                <li role="presentation" class="pot-small-img active">
                                    <a href="#img-tab-1" role="tab" data-toggle="tab">
                                        <img src="/img/product-2/sm-img-3/3.jpg" alt="small-image">
                                    </a>
                                </li>
                                <li role="presentation" class="pot-small-img">
                                    <a href="#img-tab-2" role="tab" data-toggle="tab">
                                        <img src="/img/product-2/sm-img-3/1.jpg" alt="small-image">
                                    </a>
                                </li>
                                <li role="presentation" class="pot-small-img">
                                    <a href="#img-tab-3" role="tab" data-toggle="tab">
                                        <img src="/img/product-2/sm-img-3/2.jpg" alt="small-image">
                                    </a>
                                </li>
                            </ul>
                            <!-- fin imagenes pequeñas -->
                        </div>
                    </div>
                    <div class="col-md-7 col-lg-7 col-sm-12 col-xs-12 smt-40 xmt-40">
                        <div class="ht__product__dtl">
                            <h2>{{idProducto.nombre}}</h2>
                            <h6>Modelo: <span>2020</span></h6>
                            <ul class="pro__prize">
                                {{!-- <li class="old__prize">$82.5</li> --}}
                                <li>$ {{idProducto.precio}} CLP</li>
                            </ul>
                            <div class="ht__pro__desc"></div>
                                <div class="sin__desc">                                   
                                     <p><span>Descripcion del Producto: </span>{{idProducto.descripcion}}</p>                             
                                </div>
                            </div> 
                            <div class="ht__pro__desc">
                                <div class="sin__desc">                                   
                                    <p><span>Estado:</span>
                                     {{#if idProducto.stock}} 
                                        Disponible
                                     {{else}}
                                        Agotado
                                     {{/if}}
                                     </p>                                    
                                </div>
                                <div class="sin__desc">
                                    <p><span>Stock:</span> {{idProducto.stock}} Unidades Disponibles</p>
                                </div>
                            </div>
                            <br>
                            <br>
                            <br>
                            <br>
                            <br>                        
                            <div class="fr__list__btn">
                                <a class="fr__btn" href="/add/{{idProducto.id}}">Agregar al Carrito</a>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
    <!-- End Product Details Top -->
</section>
<!-- End Product Details Area -->

<!-- Descripcion del producto-->
